include-file = ~/.local/colors/ocean/ocean.ini

[bar/topbar]
width = 100%
height = 55
fixed-center = true
dpi = 210
background = #0000
foreground = ${colors.foreground}

padding-left = 1
padding-right = 1

module-margin-left = 1
module-margin-right = 1

font-0 = OverpassMono Nerd Font:pixelsize=10:style=Bold;12
font-1 = icomoon\-feather:pixelsize=10;11

modules-left = bspwm xwindow
modules-center = date
modules-right = cpu network battery powermenu

tray-detached = false
tray-offset-x = -5
tray-offset-y = 12
tray-align = center
tray-position = right
tray-padding = 2
tray-maxsize = 50
tray-scale = 0.7

wm-restack = bspwm
override-redirect = false

scroll-up = bspwm-desknext
scroll-down = bspwm-deskprev

cursor = pointer
cursor-click = pointer

[module/bspwm]
type = internal/bspwm

label-focused = %name%
label-focused-padding = 1
label-focused-foreground = ${colors.green} 

label-occupied = %name%
label-occupied-padding = 1
label-occupied-foreground = ${colors.blue}

label-empty = %name%
label-empty-padding = 1
label-empty-foreground = ${colors.black}

label-urgent = %name%!
label-urgent-padding = 1
label-urgent-foreground = ${colors.yellow}

[module/xwindow]
type = internal/xwindow
label = %title:0:30:...%

[module/date]
type = internal/date
interval = 5
time = %A%e %b / %I:%M %p
format-prefix-foreground = ${colors.foreground}
label = %date% %time%

[module/cpu]
type = internal/cpu
interval = 2
format-prefix = " "
label = %percentage:2%%

[module/network]
type = internal/network
interface = wlan0
interval = 3.0

format-connected = <label-connected>
label-connected =  %essid%%downspeed:9%

format-disconnected = <label-disconnected>
label-disconnected = 
label-disconnected-foreground = ${colors.red}

[module/battery]
type = internal/battery
battery = BAT0
adapter = ADP1
full-at = 98

format-charging =  <label-charging>
format-discharging =  <label-discharging>
format-full-prefix = " "

[module/powermenu]
type = custom/menu

expand-right = true

format-spacing = 1

label-open = 
label-close = 
label-separator = /

menu-0-0 = Reboot
menu-0-0-exec = #powermenu.open.1
menu-0-1 = Power off
menu-0-1-exec = #powermenu.open.2

menu-1-0 = Cancel
menu-1-0-exec = #powermenu.open.0
menu-1-1 = Reboot
menu-1-1-exec = loginctl reboot

menu-2-0 = Cancel
menu-2-0-exec = #powermenu.open.0
menu-2-1 = Power off
menu-2-1-exec = loginctl poweroff

[settings]
screenchange-reload = true
;compositing-background = xor
;compositing-background = screen
;compositing-foreground = source
;compositing-border = over
;pseudo-transparency = false

[global/wm]
margin-top = 5
margin-bottom = 5

; vim:ft=dosini
