#!/bin/sh

running_wm="$(wmctrl -m | grep "Name" | cut -d ":" -f2)"

# Reload window manager
if [ "$running_wm" == "dwm" ]; then
    dwmc quit
else if [ "$running_wm" == "herbstluftwm" ]; then
    herbstclient reload
fi

# Reload dunst
pkill dunst
ln -sf ~/.cache/wal/colors-wal-dunst ~/.config/dunst/dunstrc
dunst &
